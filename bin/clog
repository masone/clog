#!/usr/bin/env node
// Generated by CoffeeScript 1.7.1
var USAGE, argv, clog, command, message,
  __slice = [].slice;

clog = require("../lib/clog").clog;

argv = require("minimist")(process.argv.slice(2));

command = function() {
  var commands;
  commands = 1 <= arguments.length ? __slice.call(arguments, 0) : [];
  return commands.reduce(function(memo, c) {
    if (argv[c]) {
      memo = true;
    }
    return memo;
  }, false);
};

USAGE = "\nUsage: clog path/to/file1.coffee path/to/file2.coffee\n\n-h, --help    display this message\n-v, --version display the current version";

if (command("h", "help")) {
  message = USAGE;
} else if (command("v", "version")) {
  message = clog.VERSION;
} else if (argv._.length) {
  message = clog.report(argv._);
} else {
  message = USAGE;
}

console.log(message);
